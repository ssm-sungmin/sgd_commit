<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/num1"
                android:layout_alignBottom="@+id/num1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                android:text="연결 이름"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview1"
                android:ems="10"
                android:gravity="center"
                android:lines="1"
                android:maxLength="12"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="20dp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/number1"
                android:layout_alignBottom="@+id/number1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                android:text="인증 번호"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/textview2"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:width="40dp" />

            <EditText
                android:id="@+id/number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:width="40dp" />

            <EditText
                android:id="@+id/number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number2"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:width="40dp" />

            <EditText
                android:id="@+id/number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/number3"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:width="40dp" />
        </RelativeLayout>
    </LinearLayout>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#1E88E5"
        android:text="Connect" />

</LinearLayout>